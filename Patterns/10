#include <iostream>
using namespace std;
int main() {
    int n;
    cin>>n;
    
    int star;
    
    for(int i=1;i<=2*n-1;i++){
        star = i;
        if(star>n) star = 2*n-i;
        
        for(int j=0;j<star;j++){
            cout<<"*";
        }
        
        cout<<endl;
    }
    
   
    
    return 0;
}
