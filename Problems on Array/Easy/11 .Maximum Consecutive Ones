/*
if arr[] = {1,1,0,1,1,1} -> 3
if arr[] = {1,0,1,1,0,1} ->2
*/

#include <bits/stdc++.h>
using namespace std;

int MaximumConsecutiveOnes(int arr[],int n){
    int maxx = 0;
    int cnt = 0;
    
    for(int i=0;i<n;i++){
        if(arr[i]==1){
            cnt++;
            maxx = max(cnt,maxx);
        }else{
            cnt = 0;
        }
    }
    
    return maxx;
}

int main() {
    
    int n;
    cin>>n;
    int arr[n];
    
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    
    cout<<MaximumConsecutiveOnes(arr,n);

    return 0;
}
