#include <iostream>
using namespace std;

int fact(int a){          // function to generate factorial of number
    int f = 1;
    for(int i = 2;i<=a ;i++){
       f = f*i;
    }
    return f;
}

int main() {
    int n;
    cout<<"Enter limit:";
    cin>>n;
    for(int i=0;i<n;i++){
        for(int j=0;j<=i;j++){
            int ans = fact(i)/(fact(j)*fact(i-j));   // formula for pascal triangle explanation in N.B
            cout<<ans<<"\t";
        }
        cout<<"\n";
    }
    return 0;
}
